[mysqld]
# Server identification
server-id = 223344

# Binary logging for CDC
log-bin = mysql-bin
binlog_format = ROW
binlog_row_image = FULL

# Log retention
expire_logs_days = 7
max_binlog_size = 100M

# Performance and compatibility
innodb_flush_log_at_trx_commit = 1
sync_binlog = 1

# Allow connections from other containers
bind-address = 0.0.0.0

# Character set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# MariaDB GTID (different from MySQL GTID)
# Note: MariaDB uses different GTID implementation than MySQL
# These are optional for basic CDC functionality
# gtid_strict_mode = 1
# log_slave_updates = 1

# Additional MariaDB-specific settings for CDC
binlog_annotate_row_events = ON
binlog_checksum = CRC32